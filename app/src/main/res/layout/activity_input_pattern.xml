<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="65dp"
            android:layout_marginStart="65dp"
            android:text="@string/txtPattern"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="19sp" />

    </LinearLayout>

    <com.andrognito.patternlockview.PatternLockView
        android:id="@+id/patternInput"
        android:layout_width="310dp"
        android:layout_height="280dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        app:aspectRatio="width_bias"
        app:aspectRatioEnabled="true"
        app:correctStateColor="@color/colorGreen"
        app:dotAnimationDuration="150"
        app:normalStateColor="@color/colorBlack"
        app:wrongStateColor="@color/colorRed" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/btCancel"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="@string/txtCancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btConfirm"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="@string/txtContinue"
            style="?android:attr/borderlessButtonStyle"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>