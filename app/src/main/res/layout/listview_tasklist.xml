<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTLMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Oct"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tvTLDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="6"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="27sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTLTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="0dp"
                android:text="Lorem ipsum dolor sit amet, ut quo movet "
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <LinearLayout
                android:id="@+id/LyContVel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvlbCont"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="@string/txtCont"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvTLContNo"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvlbVess"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="@string/txtVes"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvTLVessel"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/LyRsvIO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvRsvL"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Rsv No."
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/TvRsvNo"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvlbIONo"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="IO No."
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvIONo"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LyDlv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDlvN"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Dlv No."
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvDlvNoC"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tvTLTranNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvTLTag"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>