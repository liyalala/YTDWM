<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/txtBin"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPickBin"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="20A003"
            android:textSize="18sp" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/txtBatch"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBatch"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="REEFW14N"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/txtMatNo"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMatNo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="01000587-00000"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="@string/txtHU"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHU"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="000000000000057997"
            android:textSize="18sp" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/txtRollNo"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRollNo"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6781"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/txtSourceHU"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSourceHU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000000000000057"
            android:textSize="18sp" />

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="@string/txtOuterPkg"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHLHU"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6781"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/txtDyeLot"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/tvDyeLot"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BB0002"
            android:textSize="18sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/txtFabTon"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/tvFabTon"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BB0002"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/txtReqdQty"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvReqdQty"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:paddingRight="5dp"
            android:text="542.00000"
            android:textAlignment="textEnd"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txtPickQty"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPickQty"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:paddingRight="5dp"
            android:text="542.00000"
            android:textAlignment="textEnd"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>